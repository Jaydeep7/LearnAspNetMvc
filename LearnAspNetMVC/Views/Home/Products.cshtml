                </div>*@

            @for (Int16 it = 0; it < Model.categories.Count(); it++)
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => Model.categories[it].Id)

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => Model.categories[it].Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => Model.categories[it].isSelected) @Model.categories[it].Name
                        </div>
                    </div>
                </div>
            }
        </div>

        @*Loading Items...*@
        @*Used partial view instead of this*@
