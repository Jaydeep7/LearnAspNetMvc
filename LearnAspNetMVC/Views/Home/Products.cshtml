@using LearnAspNetMVC.ViewModel;
@model ProductsVM
@{
    ViewBag.Title = "Products";
}
<h2>Products</h2>
@using (Html.BeginForm())
{
    <div class="row">

        <div class="form-horizontal">
            <h4>Category</h4>
            <hr />
            @for (int i = 0; i < @Model.categories.Count(); i++)
            {

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => Model.categories[i].Id)

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.HiddenFor(model => Model.categories[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => Model.categories[i].isSelected) @Model.categories[i].Name
                        </div>
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>

