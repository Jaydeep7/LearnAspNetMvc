@model IList<LearnAspNetMVC.Models.Item>

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>


@for (int i = 0; i < Model.Count() / 3; i++)
{

    <div class="row">
        @foreach (var item in Model.Skip(i * 3).Take(3))
        {
            <div class="col-md-4">
                <img src="@Url.Content(item.ImagePath)" alt="@item.Description" class="thumbnail" />
            </div>
        }
    </div>
}

