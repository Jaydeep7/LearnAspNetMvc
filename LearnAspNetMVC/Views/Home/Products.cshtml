@using LearnAspNetMVC.ViewModel;
@model ProductsVM
@{
    ViewBag.Title = "Products";
}
<h2>Products</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @*Loading Categories...*@
            @*<div class="input-group">
                    @Html.CheckBox("chkShoes", true) Shoes
                </div>
                <div class="input-group">
                    @Html.CheckBox("chkWatch", isChecked: true) Watches
                </div>*@

            @for(Int16 it  = 0; it < Model.categories.Count(); it++)
            {
                <div class="input-group">
                    @*@Html.CheckBoxFor(model => Model.categories[it].isSelected, new { name = "ProductsVM.categories[" + it + "]." + Model.categories[it].id ,  id = "ChkCategory"+ Model.categories[it].Id.ToString(), @class = "Categories" }) Model.categories[it].Name
                    @Html.HiddenFor(model => Model.categories[it].Name)*@
                    <input type="hidden" name = "@("[1]["+ it + "].Id")" />
                    <input type="hidden" name = "@("[1][" + it + "].Name")" class="Categories" /> 
                    <input type="checkbox" name="@("[1][" + it + "].isSelected")" />   @Model.categories[it].Name

                </div>
            }
        </div>

        @*Loading Items...*@
        <div class="col-md-10">
            @for (int i = 0; i < Model.items.Count() / 3; i++)
            {
                <div class="row">
                    @foreach (var item in Model.items.Skip(i * 3).Take(3))
                    {
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <img src="@Url.Content(item.ImagePath)" alt="@item.Description" class="thumbnail" />
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <input type="submit" value="submit" />
}


@section scripts
{
    <script src="~/Scripts/Products.js"></script>
}