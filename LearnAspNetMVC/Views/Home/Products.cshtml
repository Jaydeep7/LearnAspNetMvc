@using LearnAspNetMVC.ViewModel;
@using LearnAspNetMVC.Models;
@model ProductsVM
@{
    ViewBag.Title = "Products";
}
<h2>Products</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            @*Loading Categories...*@
            @*<div class="input-group">
                    @Html.CheckBox("chkShoes", true) Shoes
                </div>
                <div class="input-group">
