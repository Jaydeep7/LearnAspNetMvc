@model IList<LearnAspNetMVC.Models.Item>

@{
    ViewBag.Title = "Products";
}
<h2>Products</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-2">
            <div class="input-group">
                @Html.CheckBox("chkShoes", true) Shoes
            </div>
            <div class="input-group">
                @Html.CheckBox("chkWatch", isChecked: true) Watches
            </div>
        </div>
        <div class="col-md-10">
            @for (int i = 0; i < Model.Count() / 3; i++)
            {
                <div class="row">
                    @foreach (var item in Model.Skip(i * 3).Take(3))
                    {
                        <div class="col-md-4 col-sm-6 col-xs-12">
                            <img src="@Url.Content(item.ImagePath)" alt="@item.Description" class="thumbnail" />
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}


@section scripts
{
<script src="~/Scripts/Products.js"></script>
}